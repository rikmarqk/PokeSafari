<div class="topbanner">
<img id="pokebanner" src="https://www.pinclipart.com/picdir/big/164-1648349_pokemon-brick-bronze-png-banner-library-stock-pokemon.png">
<h1 class="pagetitle">PokeDex<h1/>
<div id="search">
<%=form_for "", url: pokemons_path, role:"search", method: :get do %>
<%=text_field_tag :search, @search_tern, placeholder:"Search Here"%>
<%=submit_tag "Search"%>
<%end%>
</div>
<div class="navlinks_content">
<%=link_to "Search By Zone", zones_path%>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
<%=link_to "My Profile", user_path(session[:id])%>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
<%=link_to "Pokedex", pokemons_path%>
</div>
</div>

<div class="content">
<h1><%= @user.name %><h1/>

<img id="user" src=<%=@user.img_url%>>
<h3>Your Current Pokemon</h3>
<%@user.user_pokemons.each do |user_pokemon|%>
<%=link_to user_pokemon.nickname, pokemon_path(user_pokemon.pokemon)%>
<a href=<%=pokemon_path(user_pokemon.pokemon)%>><img src=<%= user_pokemon.pokemon.img_url%>></a>
<%=link_to "Edit Nickname", edit_user_pokemon_path(session[:id])%>
<%= button_to 'Release', user_path(user_pokemon), method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%><br><br><br><br><br><br>
<%= link_to "See Full Pokedex", pokemons_path %><br><br>
<%= link_to "See The Safari Zones", zones_path %><br><br>
<%= button_to "logout", logout_path, method: :delete %>

</div>
