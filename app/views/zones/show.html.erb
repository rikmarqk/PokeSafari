<div class="topbanner">
<img id="pokebanner" src="https://www.pinclipart.com/picdir/big/164-1648349_pokemon-brick-bronze-png-banner-library-stock-pokemon.png">
<h1 class="pagetitle">PokeDex<h1/>
<div id="search">
<%=form_for "", url: pokemons_path, role:"search", method: :get do%>
<%=text_field_tag :search, @search_tern, placeholder:"Search Here"%>
<%=submit_tag "Search", class: 'button'%>
<%end%>
</div>
<div class="navlinks_content">
<%=link_to "Search By Zone", zones_path%>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
<%=link_to "My Profile", user_path(session[:id])%>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
<%=link_to "Pokedex", pokemons_path%>
</div>
</div>
<div class="leftbanner">
<h3>PokeDex<h3>
<ul><%@zones.each do |zone|%>
    <li><%= link_to zone.name, zone_path(zone)%></li>
    <%end%>
    </ul>
</div>
<div class="content">
<h1><%= @zone.name %></h1>
<h5><%= @zone.description %></h5>

<img id="zone" src=<%=@zone.img_url%>>

<ul id="hori">
<%@zone.pokemons.each do |pokemon|%>
<li><%=link_to pokemon.name, pokemon_path(pokemon)%>
<a href=<%=pokemon_path(pokemon)%>><img src=<%= pokemon.img_url%>></a>
</li>
<%end%>
</br></br></br>
<ul>
<li><%=link_to "Back Profile     |", user_path(session[:id])%></li>
<li><%=link_to "Back To Pokedex", pokemons_path%></li>
</ul>

</div>