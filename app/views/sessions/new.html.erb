<h1>Login</h1>

<%if  flash[:errors] %>
<li style="color:red"><%=flash[:errors]  %></li>
<% end %>
<div class="content">
<%= form_for @user, :url => '/login' do |f| %>
<%= f.label :email%><br>
<%= f.text_field :email, placeholder: "Email"%><br>
<%= f.label :password%><br>
<%= f.password_field :password, placeholder: "Password"%><br><br>
<%= f.submit 'Login'%><br>
<%end%><br>
<p> Do Not Have a Pokedex Account?</p>

<%=link_to "Create Account", new_user_path %>
</div>