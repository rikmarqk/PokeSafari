<h1>Login</h1>
<%if  flash[:errors] %>
<li style="color:red"><%=flash[:errors]  %></li>
<% end %>

<%= form_for @user, :url => '/login' do |f| %>
<%= f.label :email%>
<%= f.text_field :email%><br>
<%= f.label :password%>
<%= f.password_field :password%><br>
<%= f.submit 'Log In'%>
<%end%>

<%=button_to "Create New Pokedex Account", new_user_path%>